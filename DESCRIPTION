Package: BioNERO
Type: Package
Title: Biological Network Reconstruction Omnibus
Version: 0.99.0
Authors@R: c(person("Fabricio", "Almeida-Silva", 
                    email="fabricio_almeidasilva@hotmail.com", 
                    role=c("cre", "aut"), 
                    comment = c(ORCID = "0000-0002-5314-2964")),
